<div class="d-flex justify-content-between align-items-center mb-4">
  <h4 class="text-success">
    <i class="fa fa-user-group me-2"></i>Group Perangkat
  </h4>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="stat-card">
      <h5 class="mb-4"><i class="fa fa-list me-2"></i>Daftar Perangkat</h5>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ID Group</th>
              <th>Nama Group</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="stat-card">
      <h5 class="mb-4">
        <i class="fa fa-info-circle me-2"></i>Informasi Perangkat
      </h5>

      <div class="mb-3">
        <label>Device Key</label>
        <p><strong><%= device.device_key %></strong></p>
      </div>
      <div class="mb-3">
        <label>Nomor WhatsApp</label>
        <p><strong><%= device.phone || 'Tidak tersedia' %></strong></p>
      </div>
      <div class="mb-3">
        <label>Nama Akun WhatsApp</label>
        <p><strong><%= device.name || 'Tidak tersedia' %></strong></p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const key = "<%= deviceKey %>";
    const apiKey = "<%= apiKey %>"; 
    const tableBody = document.querySelector("tbody");

    fetch(`/group/list?key=${key}`)
      .then((response) => response.json())
      .then((data) => {
        if (data.status && Array.isArray(data.data)) {
          if (data.data.length === 0) {
            tableBody.innerHTML = `
            <tr>
              <td colspan="2" class="text-center">Tidak ada group terdaftar</td>
            </tr>`;
          } else {
            tableBody.innerHTML = "";
            data.data.forEach((group) => {
              const row = document.createElement("tr");
              row.innerHTML = `
              <td><code>${group.id}</code></td>
              <td>${group.name}</td>
            `;
              tableBody.appendChild(row);
            });
          }
        } else {
          tableBody.innerHTML = `
          <tr>
            <td colspan="2" class="text-center text-danger">Gagal mengambil data grup</td>
          </tr>`;
        }
      })
      .catch((error) => {
        console.error("Fetch group error:", error);
        tableBody.innerHTML = `
        <tr>
          <td colspan="2" class="text-center text-danger">Terjadi kesalahan saat mengambil data</td>
        </tr>`;
      });
  });
</script>
