<!-- Baris Pertama -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <h5>Saldo</h5>
            <h2>Rp <%= (countSummary.balance || 0).toLocaleString() %></h2>
            <small class="text-muted">
                Update <%= countSummary && countSummary.updatedAt ? moment(countSummary.updatedAt).fromNow() : "Belum tersedia" %>
            </small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <h5>Perangkat Aktif</h5>
            <h2><%= countDevice || 0 %> Device</h2>
            <small class="text-muted">
                Terakhir aktif: <%= countDeviceLast && countDeviceLast.last_active ? countDeviceLast.last_active : "-" %>
            </small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <h5>Total Pesan</h5>
            <h2>
                <%= (countMessage ? (countMessage.sent || 0) + (countMessage.pending || 0) + (countMessage.failed || 0) + (countMessage.processing || 0) : 0) %>
            </h2>
            <small class="text-muted">Bulan ini</small>
        </div>
    </div>
</div>


<!-- Baris Kedua -->
<div class="row">
    <div class="col-md-8">
        <div class="stat-card">
            <h5 class="mb-4">Statistik Pengiriman Pesan</h5>
            <div class="chart-container">
                <canvas id="messageChart"></canvas>
            </div>
        </div>


        <div class="stat-card">
            <h5 class="mb-4">Perangkat Aktif</h5>
            <div class="table-responsive">

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nama Perangkat</th>
                            <th>Nomor WA</th>
                            <th>Status</th>
                            <th>Terakhir Aktif</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% if (!devices || devices.length===0) { %>
                            <tr>
                                <td colspan="5" class="text-center">Tidak ada device terdaftar</td>
                            </tr>
                            <% } else { %>
                                <% devices.forEach(device=> { %>


                                    <tr>
                                        <td>
                                            <%= device.name %>
                                        </td>
                                        <td>
                                            <%= device.phone %>
                                        </td>
                                        <td>
                                            <% const statusClass={ 'connected' : 'connected' , 'disconnected'
                                                : 'disconnected' , 'connecting' : 'connecting' }[device.status]
                                                || 'disconnected' %>
                                                <span class="status-badge <%= statusClass %>">
                                                    <i
                                                        class="fa fa-<%= statusClass === 'connected' ? 'check' : 'times' %>-circle" style="color:<%= statusClass === 'connected' ? 'green' : 'red' %>"></i>
                                                    <%= device.status.charAt(0).toUpperCase() + device.status.slice(1)
                                                        %>
                                                </span>

                                        </td>
                                        <td><%= device.last_active %></td>
                                    </tr>



                                    <% }) %>
                                        <% } %>
                    </tbody>
                </table>

            </div>
        </div>


    </div>
    <div class="col-md-4">
        <div class="stat-card mb-4" style="display: none;">
            <h5>Status WhatsApp</h5>
            <div class="text-center my-4">
                <i class="fab fa-whatsapp fa-3x text-success mb-3"></i>
                <h4>Connected</h4>
                <small class="text-muted">Terhubung ke <%= devices.length %> device</small>
            </div>
        </div>
        <div class="stat-card">
            <h5>Pesan Terakhir</h5>
            <div class="mt-3">
                <% if (messagesLast.length > 0) { %>
                    <% messagesLast.forEach(message => { %>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-user-circle fa-2x me-3"></i>
                            <div>
                                <h6><%= message.number %></h6>
                                <small class="text-muted">Pesan: <%= message.message %></small>
                                <br>
                                <small class="text-muted"><i class="fa fa-clock"></i> <%= moment(message.created_at).format("DD MMM YYYY, HH:mm") %></small>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted">Tidak ada pesan terbaru.</p>
                <% } %>
            </div>
        </div>
        
    </div>
</div>

<style>
    /* Pastikan chart-container fleksibel */
    .chart-container {
        width: 100%;
        max-width: 100%;
        height: auto;
        min-height: 300px; /* Sesuaikan sesuai kebutuhan */
        max-height: 400px;
    }

    canvas {
        width: 100% !important;
        height: auto !important;
        max-height: 400px;
    }
</style>


<script>
    // Data Statistik Pengiriman Pesan dari Server
    const messageStatistics = <%- JSON.stringify(messageStatistics) %>;

    // Ekstrak data untuk chart
    const labels = messageStatistics.daily.map(item => item.date);
    const sentData = messageStatistics.daily.map(item => item.sent);
    const pendingData = messageStatistics.daily.map(item => item.pending);
    const failedData = messageStatistics.daily.map(item => item.failed);

    // Pastikan Chart.js menyesuaikan ukuran box
    const ctx = document.getElementById('messageChart').getContext('2d');
    const messageChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'Terkirim',
                    data: sentData,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true
                },
                {
                    label: 'Pending',
                    data: pendingData,
                    borderColor: 'rgba(255, 206, 86, 1)',
                    backgroundColor: 'rgba(255, 206, 86, 0.2)',
                    fill: true
                },
                {
                    label: 'Gagal',
                    data: failedData,
                    borderColor: 'rgba(255, 99, 132, 1)',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    fill: true
                }
            ]
        },
        options: {
            responsive: true, // Chart menyesuaikan ukuran container
            maintainAspectRatio: false, // Jangan pertahankan rasio aspek bawaan
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Tanggal'
                    }
                },
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Jumlah Pesan'
                    }
                }
            },
            plugins: {
                legend: {
                    display: true,
                    position: 'top'
                }
            }
        }
    });
</script>

