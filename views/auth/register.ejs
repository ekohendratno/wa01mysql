<style>
    .auth-section {
        background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
    }
    .login-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 400px;
    }
    .brand-title {
        color: #128C7E;
        font-weight: 700;
        font-size: 1.8rem;
    }
    .form-control-custom {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 12px 15px 12px 40px;
        transition: all 0.3s;
    }
    .form-control-custom:focus {
        border-color: #128C7E;
        box-shadow: none;
    }
    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        z-index: 2;
    }
    .form-label {
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
        color: #495057;
    }
    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #128C7E;
        text-align: center;
    }
</style>

<section class="auth-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 pt-4 pb-4">
                <div class="login-card mx-auto p-4">
                    <!-- Brand Title -->
                    <div class="text-center mb-4">
                        <h1 class="brand-title mb-3">w@pi</h1>
                        <h2 class="section-title">Formulir Pendaftaran</h2>
                    </div>

                    <!-- Tampilkan error jika ada -->
                    <% if (error) { %>
                        <div class="alert alert-danger text-center">
                            <%= error %>
                        </div>
                    <% } %>

                    <!-- Registration Form -->
                    <form action="/auth/register" method="POST">
                        <!-- Nama Lengkap -->
                        <div class="mb-4">
                            <label class="form-label">Nama Lengkap</label>
                            <div class="position-relative">
                                <i class="fas fa-user input-icon"></i>
                                <input name="name" type="text" class="form-control form-control-custom" 
                                       placeholder="Tuliskan nama lengkap anda" 
                                       value="<%= typeof name !== 'undefined' ? name : '' %>" required>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label class="form-label">Alamat Email</label>
                            <div class="position-relative">
                                <i class="fas fa-envelope input-icon"></i>
                                <input name="email" type="email" class="form-control form-control-custom" 
                                       placeholder="Tuliskan email pribadi anda" 
                                       value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                            </div>
                        </div>

                        <!-- Nomor WhatsApp -->
                        <div class="mb-4">
                            <label class="form-label">Nomor WhatsApp</label>
                            <div class="position-relative">
                                <i class="fas fa-phone input-icon"></i>
                                <input name="phone" type="tel" class="form-control form-control-custom" 
                                       placeholder="Tuliskan nomor whatsapp pribadi anda" 
                                       value="<%= typeof phone !== 'undefined' ? phone : '' %>" required>
                            </div>
                            <small class="text-muted mt-2 d-block">
                                Nomor ini hanya untuk tujuan pribadi dan tidak terkait dengan bot atau notif OTP pada aplikasi anda.
                            </small>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label class="form-label">Password</label>
                            <div class="position-relative">
                                <i class="fas fa-lock input-icon"></i>
                                <input name="password" type="password" class="form-control form-control-custom" 
                                       placeholder="Buat password anda" minlength="6" required>
                            </div>
                        </div>

                        <!-- Ulangi Password -->
                        <div class="mb-4">
                            <label class="form-label">Ulangi Password</label>
                            <div class="position-relative">
                                <i class="fas fa-lock input-icon"></i>
                                <input name="repassword" type="password" class="form-control form-control-custom" 
                                       placeholder="Ketik ulang password di atas" minlength="6" required>
                            </div>
                        </div>

                        <!-- Kode Referral -->
                        <div class="mb-4">
                            <label class="form-label">Kode Referral <span class="text-muted">(opsional)</span></label>
                            <div class="position-relative">
                                <i class="fas fa-ticket-alt input-icon"></i>
                                <input name="ref" type="text" class="form-control form-control-custom" 
                                       placeholder="Masukkan kode referral" 
                                       value="<%= typeof ref !== 'undefined' ? ref : '' %>">
                            </div>
                        </div>

                        <!-- Register Button -->
                        <button type="submit" class="btn btn-success w-100 mb-3 py-2 fw-bold">Daftar Sekarang â†’</button>

                        <!-- Login Link -->
                        <div class="text-center small">
                            <p class="mb-0">
                                <span class="text-muted">Sudah punya akun?</span>
                                <a href="/auth/login" class="text-success text-decoration-none fw-bold">
                                    Login di sini
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
