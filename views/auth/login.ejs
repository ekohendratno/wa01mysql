<style>
    .auth-section {
        background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
    }

    .login-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .brand-title {
        color: #128C7E;
        font-weight: 700;
        font-size: 1.8rem;
    }

    .form-control-custom {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 12px 15px 12px 40px;
        transition: all 0.3s;
    }

    .form-control-custom:focus {
        border-color: #128C7E;
        box-shadow: none;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        z-index: 2;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
        color: #495057;
    }
    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #128C7E;
        text-align: center;
    }
</style>

<section class="auth-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 pt-4 pb-4">
                <div class="login-card mx-auto p-4">
                    <!-- Brand Title -->
                    <div class="text-center mb-5">
                        <h1 class="brand-title">w@pi</h1>
                        <h2 class="section-title">Selamat Datang</h2>
                    </div>

                    <!-- Login Form -->
                    <% if (error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
        
                    <form action="/auth/login" method="POST">
                        <!-- Email Input -->
                        <div class="mb-4">
                            <label class="form-label">Username/Email</label>
                            <div class="position-relative">
                                <i class="fas fa-envelope input-icon"></i>
                                <input type="text" name="username" class="form-control form-control-custom"
                                    placeholder="contoh@email.com" required>
                            </div>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-4">
                            <label class="form-label">Password</label>
                            <div class="position-relative">
                                <i class="fas fa-lock input-icon"></i>
                                <input type="password" name="password" class="form-control form-control-custom" placeholder="••••••••" required>
                            </div>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="mb-4 form-check">
                            <input type="checkbox" name="remember" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Ingat Saya</label>
                        </div>

                        <!-- Login Button -->
                        <button type="submit" class="btn btn-success w-100 mb-3 py-2 fw-bold">Login</button>

                        <!-- Additional Links -->
                        <div class="text-center small">
                            <p class="mb-2">
                                <a href="#" class="text-decoration-none text-muted">
                                    Belum menerima email aktivasi? Klik di sini
                                </a>
                            </p>
                            <p class="mb-0">
                                <span class="text-muted">Belum punya akun?</span>
                                <a href="/auth/register" class="text-success text-decoration-none fw-bold">
                                    Daftar di sini
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>