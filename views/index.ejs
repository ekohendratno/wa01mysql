<style>
    #features {
        background-color: #f2f2f2;
    }

    .feature-card {
        transition: transform 0.3s;
        border: none;
        border-radius: 15px;
        padding-top: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .feature-card:hover {
        transform: translateY(-10px);
    }

    .provider-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 0.8rem;
        background: rgba(0, 0, 0, 0.1);
        padding: 3px 8px;
        border-radius: 20px;
    }

    .hero-section {
        background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
        color: white;
        padding: 100px 0;
    }

    .icon-feature {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #128C7E;
    }

    .pricing-card {
        border: 2px solid #128C7E;
        border-radius: 15px;
        min-height: 400px;
        transition: all 0.3s ease-in-out;
        background: #fff;
    }
    
    .pricing-card:hover {
        transform: translateY(-8px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
    }
    
    .pricing-card .badge {
        font-size: 0.9rem;
        font-weight: bold;
        border-radius: 30px;
    }
    

    footer {
        background: #0a3d2d;
        color: white;
        padding: 50px 0 20px;
    }
</style>
