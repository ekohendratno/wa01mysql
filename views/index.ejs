<!-- Hero Section -->
<section class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-4">Solusi WhatsApp Business Terintegrasi</h1>
        <p class="lead mb-4">Tingkatkan komunikasi bisnis Anda dengan fitur lengkap WhatsApp API</p>
        <div class="d-flex gap-3 justify-content-center">
            <a href="/auth/login" class="btn btn-light btn-lg px-5">Mulai Sekarang</a>
            <a href="#features" class="btn btn-outline-light btn-lg px-5">Pelajari Lebih</a>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="pricing" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold text-success">Pilih Paket yang Sesuai</h2>
        <div class="row g-4">

            <% packages.forEach(pkg => { %>
            <div class="col-md-3">
                <div class="card h-100 pricing-card position-relative shadow-sm 
                    <%= pkg.recomended ? 'border-warning bg-warning bg-opacity-25' : 'border-secondary bg-light' %>">
                    
                    <% if (pkg.recomended) { %>
                        <span class="badge bg-success position-absolute top-0 start-50 translate-middle text-white px-3 py-2">
                            Rekomendasi
                        </span>
                    <% } %>
                    
                    <div class="card-body text-center">
                        <h4 class="card-title fw-bold"><%= pkg.name %></h4>
                        <h2 class="text-success">Rp <%= new Intl.NumberFormat('id-ID').format(pkg.price) %></h2>
                        <small class="text-muted">/<%= pkg.duration %> hari</small>

                        <ul class="list-unstyled text-start mt-3">
                            <% if (pkg.description) { %>
                                <% pkg.description.split('<br>').forEach(line => { %>
                                    <li class="mb-2">
                                        <% if (line.includes('✅')) { %>
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                        <% } else { %>
                                            <i class="fas fa-times-circle text-danger me-2"></i>
                                        <% } %>
                                        <%= line.replace('✅', '').replace('❌', '') %>
                                    </li>
                                <% }) %>
                            <% } else { %>
                                <li class="text-muted">Tidak ada informasi fitur.</li>
                            <% } %>
                        </ul>

                    </div>
                </div>
            </div>
            <% }) %>

        </div>
    </div>
</section>



