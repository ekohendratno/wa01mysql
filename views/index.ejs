<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Gateway</title>
    <!-- Bootstrap 3 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .main-container {
            max-width: 1000px;
            margin: 20px auto;
            padding: 30px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .table-container {
            margin-top: 20px;
            border-radius: 8px;
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

        .table>thead>tr>th {
            background-color: #2c3e50;
            color: white;
            font-weight: 500;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.9em;
        }

        .connected {
            background-color: #dff0d8;
            color: #3c763d;
        }

        .disconnected {
            background-color: #f2dede;
            color: #a94442;
        }

        .btn-action {
            margin: 2px;
            padding: 6px 12px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/"><i class="fa fa-whatsapp"></i> WhatsApp Gateway</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
                <li><a href="/settings"><i class="fa fa-cog"></i> Pengaturan</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="main-container">
            <div class="header-section">
                <h2><i class="fa fa-list-alt"></i> Daftar Session</h2>
                <p class="text-muted">Kelola session WhatsApp Gateway Anda</p>
                <button class="btn btn-primary" data-toggle="modal" data-target="#addSessionModal">
                    <i class="fa fa-plus-circle"></i> Tambah Session
                </button>
            </div>

            <div class="table-container">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Session Key</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody id="sessionTableBody">
                            <tr>
                                <td colspan="3" class="text-center">Memuat data...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Modals -->
        <!-- Add Session Modal -->
        <div class="modal fade" id="addSessionModal" tabindex="-1" role="dialog" aria-labelledby="addSessionModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title"><i class="fa fa-plus-square"></i> Buat Session Baru</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="unixKey">Unix Key:</label>
                            <input type="text" id="unixKey" class="form-control" placeholder="Masukkan Unix Key"
                                required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            <i class="fa fa-times"></i> Batal
                        </button>
                        <button type="button" class="btn btn-primary" id="createSessionBtn">
                            <i class="fa fa-check"></i> Buat
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Send Message Modal -->
        <div class="modal fade" id="sendMessageModal" tabindex="-1" role="dialog"
            aria-labelledby="sendMessageModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title"><i class="fa fa-envelope"></i> Kirim Pesan</h4>
                    </div>
                    <div class="modal-body">
                        <form id="sendMessageForm">
                            <input type="hidden" id="sessionKey">
                            <div class="form-group">
                                <label>Tipe Pesan:</label>
                                <select id="group" class="form-control">
                                    <option value="false">Pribadi</option>
                                    <option value="true">Grup</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Tujuan:</label>
                                <input type="text" id="to" class="form-control"
                                    placeholder="Nomor telepon atau ID grup (pisahkan dengan koma)" required>
                            </div>
                            <div class="form-group">
                                <label>Isi Pesan:</label>
                                <textarea id="text" class="form-control" rows="4" placeholder="Tulis pesan Anda..."
                                    required></textarea>
                            </div>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-paper-plane"></i> Kirim
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script>
        // Updated fetchSessionStatus with new styling
        function fetchSessionStatus() {
            $.ajax({
                url: "/session",
                method: "GET",
                success: function (response) {
                    const tableBody = $("#sessionTableBody");
                    tableBody.empty();

                    if (response.status && response.data.length > 0) {
                        response.data.forEach(session => {
                            const statusBadge = session.connected ?
                                `<span class="status-badge connected">
                                    <i class="fa fa-check-circle"></i> Terhubung
                                </span>` :
                                `<span class="status-badge disconnected">
                                    <i class="fa fa-times-circle"></i> Terputus
                                </span>`;

                            const actions = `
                                <div class="btn-group">
                                    ${session.connected ?
                                    `<button class="btn btn-default btn-action" onclick="disconnectSession('${session.key}')">
                                            <i class="fa fa-chain-broken"></i>
                                        </button>` :
                                    `<button class="btn btn-success btn-action" onclick="scanSession('${session.key}')">
                                            <i class="fa fa-qrcode"></i>
                                        </button>`}
                                    
                                    <button class="btn btn-danger btn-action" onclick="removeSession('${session.key}')">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    
                                    ${session.connected ?
                                    `<button class="btn btn-info btn-action" 
                                            onclick="sendMessageSession('${session.key}')"
                                            data-toggle="modal" data-target="#sendMessageModal">
                                            <i class="fa fa-envelope-o"></i>
                                        </button>` : ''}
                                </div>`;

                            tableBody.append(`
                                <tr>
                                    <td><a href="/status?key=${session.key}">${session.key}</a></td>
                                    <td class="text-center">${statusBadge}</td>
                                    <td class="text-center">${actions}</td>
                                </tr>
                            `);
                        });
                    } else {
                        tableBody.append(`
                            <tr>
                                <td colspan="3" class="text-center text-muted">
                                    Tidak ada session tersedia
                                </td>
                            </tr>
                        `);
                    }
                },
                error: function () {
                    $("#sessionTableBody").html(`
                        <tr>
                            <td colspan="3" class="text-center text-danger">
                                <i class="fa fa-exclamation-triangle"></i> Gagal memuat data
                            </td>
                        </tr>
                    `);
                }
            });
        }


        fetchSessionStatus();
        // Handle 'Create' button click
        $("#createSessionBtn").click(function () {
            const unixKey = $("#unixKey").val();
            if (unixKey) {
                // Redirect to /status with the key as a query parameter
                window.location.href = `/status?key=${unixKey}`;
            } else {
                alert("Please enter a Unix key.");
            }
        });

        // Scan session function
        function scanSession(key) {
            // Redirect to the scanning endpoint
            window.location.href = `/status?key=${key}`;
        }

        function disconnectSession(key) {
            alert('Disconnect tidak dapat dilakukkan')
        }

        function sendMessageSession(key) {
            $("#sessionKey").val(key);
        }


        // Handle form submission for sending messages
        $("#sendMessageForm").submit(function (event) {
            event.preventDefault(); // Prevent the default form submission

            const sessionKey = $("#sessionKey").val();
            const to = $("#to").val();
            const text = $("#text").val();
            const group = $("#group").val() === "true";  // Convert to boolean

            $.ajax({
                url: "/message/send",  // Send the message to this endpoint
                method: "POST",
                data: {
                    key: sessionKey,
                    to: to,
                    text: text,
                    group: group,
                },
                success: function (response) {
                    if (response.status) {
                        alert("Message sent successfully!");
                        $('#sendMessageModal').modal('hide');  // Close the modal
                    } else {
                        alert("Failed to send message: " + response.message);
                    }
                },
                error: function () {
                    alert("An error occurred while sending the message.");
                }
            });
        });



        // Remove session function
        function removeSession(key) {
            if (confirm(`Are you sure you want to remove session with key "${key}"?`)) {
                $.ajax({
                    url: `/session/remove?key=${key}`,
                    method: "GET",
                    success: function (response) {
                        if (response.status) {
                            alert(response.message);
                            fetchSessionStatus();  // Refresh the table after removal
                        } else {
                            alert("Failed to remove session.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while removing the session.");
                    }
                });
            }
        }
    </script>
</body>

</html>